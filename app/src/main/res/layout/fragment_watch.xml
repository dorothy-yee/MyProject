<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.watch.WatchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/watch_time"
            android:textSize="60sp" />

        <Button
            android:id="@+id/watch_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/watch_start" />

        <Button
            android:id="@+id/watch_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/watch_stop" />

        <Button
            android:id="@+id/watch_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/watch_restart" />
    </LinearLayout>

</FrameLayout>